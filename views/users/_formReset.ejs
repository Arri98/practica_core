<script>
    function confirm() {
        var pw1 = document.getElementById('user_password').value;
        var pw2 = document.getElementById('user_confirm_password').value;
        var a = document.getElementById('security_answer').value;


        if (!pw1 || !pw2 ) {
            alert('Password and Confirmation fields must be filled in.');
            return false;
        }

        if (!a) {
            alert('Security Answer must be filled in.');
            return false;
        }
        else if (pw1 === pw2) {
            return true;
        } else {
            alert('Passwords do not match.');
            return false;
        }
    }
</script>


<ul>
    <li>
        Username: <%= user.username %>
    </li>

    <li>
        <label for="user_password" class="rem">Password:</label>
        <input type="password" id="user_password" name="password" autocomplete="off"/>
    </li>

    <li>
        <label for="user_confirm_password" class="rem">Confirm Password:</label>
        <input type="password" id="user_confirm_password" autocomplete="off"/>

    </li>

    <li>
        Security Question: <%=user.question%>
    </li>

   <li>
        <label for="security_answer" class="rem">Reset Password Answer:</label>
        <input type="text" id="security_answer"  name="answer" autocomplete="off"/>
    </li>



</ul>

<div>
    <a href="/goback" class="button">Cancel</a>
</div>

<div>
    <input type="submit" value="Save" onclick="return confirm()">
</div>
